<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/categoryTag_cardView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/small_margin"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    app:cardBackgroundColor="@color/colorAccent"
    app:cardCornerRadius="@dimen/app_radius_x"
    app:contentPaddingBottom="@dimen/standard_margin"
    app:contentPaddingLeft="@dimen/standard_margin_x2"
    app:contentPaddingRight="@dimen/standard_margin_x2"
    app:contentPaddingTop="@dimen/standard_margin">

    <com.example.newsapp.custom_views.CusTextView
        android:id="@+id/category_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</androidx.cardview.widget.CardView>